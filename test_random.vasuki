// Test practical application: random password generation
print("Testing random password generation:");
def generate_password(len) {
    var charset = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()";
    var charset_length = 72; // Length of the charset string
    var password = "";
    for (var i = 1; i <= len; i = i + 1) {
        var index = random_range(1, charset_length);
        password = password + charset[index];
    };
    return password;
};

print("Random password (length 8): " + generate_password(8));
print("Random password (length 12): " + generate_password(12));
print("Random password (length 16): " + generate_password(16));
